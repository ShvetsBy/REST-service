{
  "root": true,
  "env": {
    "es2020": true,
    "jasmine": true,
    "jest": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "settings": {
    // "import/resolver": {
    //   "node": {
    //     "paths": ["src"]
    //   }
    // },
    "import/resolver": {
      "typescript": {}
      },
    "noInlineConfig": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/typescript",
    "prettier",
    "airbnb-base"
  ],
  "rules": {
    "import/extensions": "off",
    "linebreak-style": "warn",
    "node/no-unsupported-features/es-syntax": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "dot-notation": [0],
    "import/no-unresolved": [
      2, 
      { "caseSensitive": false }
   ]
  }
  
}
